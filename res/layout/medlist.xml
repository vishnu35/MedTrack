<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"                    
    				android:orientation="horizontal"    				
    				android:background="@drawable/box" >

                    <ImageView
                        android:id="@+id/MedListImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/pill" />
                    
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                    
    				android:orientation="vertical" >
    				 <TextView
        android:id="@+id/MedListId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="TextView" />
                    <TextView
                        android:id="@+id/MedListName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aspirin"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                    <TextView
                        android:id="@+id/MedListTimings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:30, 13:30, 22:30"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                    <TextView
                        android:id="@+id/MedListCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Repeat every 24 Hours"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    </LinearLayout>
                    </LinearLayout>

</LinearLayout>
